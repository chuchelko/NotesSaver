@model MVCNotesSaver.Models.User.RegisterViewModel;
@{
    ViewData["Title"] = "SignUp";
}

<h2 class="text-center mb-3">Sign Up</h2>

<div class="d-flex justify-content-center">
    <form asp-antiforgery="true" method="post" asp-action="SignUp">
        <div class="form-group mb-3">
            <input placeholder="Email" type="email" class="form-control" asp-for="Email">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Name" type="text" class="form-control" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Password" type="password" class="form-control" asp-for="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Confirm password" type="password" class="form-control" asp-for="ConfirmPassword">
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <a class="text-black text-center" asp-controller="Account" asp-action="SignIn"><div>I want to sign in</div></a>
        <div class="text-center mt-3">
             <button class="btn btn-dark" type="submit">Submit</button>
        </div>
    </form>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}