@using System.IdentityModel.Tokens.Jwt
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-8">Welcome</h1>
    <p>Manage your personal notes here.</p>
</div>

<h1 class="text-decoration-underline">Your Email is @User.Claims.FirstOrDefault(claim => claim.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress")?.Value</h1>
<h1 class="text-danger">Your Name is @User.Claims.FirstOrDefault(claim => claim.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier")?.Value</h1>
<h1 class="text-dark">Your Id is @User.Claims.FirstOrDefault(claim => claim.Type == JwtRegisteredClaimNames.Jti)?.Value</h1>